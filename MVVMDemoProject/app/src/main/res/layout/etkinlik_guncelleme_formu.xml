            android:id="@+id/liste"/>
        <!-- iletisim adresleri -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <EditText
                android:layout_width="325dp"
                android:layout_height="40dp"
                android:hint="İletişim Adresleri"
                android:id="@+id/etIletisimAdresleri"
                android:background="@drawable/form_item"
                android:textColorHint="@color/textColor"
                android:textColor="@color/textColor"
                android:textSize="@dimen/subtitle_size"
                android:fontFamily="@font/regular"
                android:paddingLeft="@dimen/text_margin"
                android:paddingTop="9dp"
                android:paddingBottom="8dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icIletisimArti"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_arti"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rootIiletisimLayout"
                android:orientation="vertical"/>


        </ScrollView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <EditText
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:hint="Etkinlik Tarihi"
                android:text="@{bindingGuncellemeForm.etkinlik.etkinlik_tarihi}"
                android:id="@+id/et_tarih"
                android:inputType="date"
                android:background="@drawable/form_item"
                android:textColorHint="@color/textColor"
                android:textColor="@color/textColor"
                android:textSize="@dimen/subtitle_size"
                android:fontFamily="@font/regular"
                android:paddingLeft="@dimen/text_margin"
                android:paddingTop="9dp"
                android:paddingBottom="8dp" />
        </RelativeLayout>

        <Button
            android:layout_width="380dp"
            android:layout_height="52dp"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_yayinlaa"
            android:textColor="@color/toolbarTitleText"
            android:textSize="@dimen/text_mediumsize"
            android:fontFamily="@font/semibold"
            android:text="YAYINLA"
            android:background="@drawable/button">

        </Button>


    </LinearLayout>

</layout>



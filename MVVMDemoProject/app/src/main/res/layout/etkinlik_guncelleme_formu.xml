            android:fontFamily="@font/regular"
            android:paddingLeft="@dimen/text_margin"
            android:paddingTop="9dp"
            android:paddingBottom="8dp"/>
        <TextView
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:hint=" Topluluğunuzu seçin."

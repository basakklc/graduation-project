        <ImageView
            android:id="@+id/ogrenci_yasami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/ders" />

    </LinearLayout>


</RelativeLayout>
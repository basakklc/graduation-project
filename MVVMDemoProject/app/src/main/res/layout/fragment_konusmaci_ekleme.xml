<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">


    <data>
        <variable
            name="konusmaciEkleme"
            type="com.example.mvvmdemoproject.domain.model.Deneme" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#939292">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <EditText
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:hint="Adi"
                android:layout_marginLeft="20dp"
                android:background="@drawable/form_item"
                android:textColorHint="@color/textColor"
                android:textColor="@color/textColor"
                android:textSize="@dimen/subtitle_size"
                android:id="@+id/konusmaci_adi"
                android:paddingLeft="@dimen/text_margin"
                android:paddingTop="9dp"
                android:paddingBottom="8dp"
                />
            <EditText
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:hint="SoyadÄ±"
                android:layout_marginRight="20dp"
                android:id="@+id/konusmaci_soyadi"
                android:background="@drawable/form_item"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/textColor"
                android:textColor="@color/textColor"
                android:textSize="@dimen/subtitle_size"
                android:paddingLeft="@dimen/text_margin"
                android:paddingTop="9dp"
                android:paddingBottom="8dp" />
            <ImageButton
                android:id="@+id/i_konusmaci_arti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_arti" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp">

            <LinearLayout
                android:id="@+id/root_layout_konusmaci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tamamla"
            android:id="@+id/tamamla"/>
    </LinearLayout>



    </layout>